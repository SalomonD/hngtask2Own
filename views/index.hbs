<div class="form-inline row mx-5">
    <div class="col">
        <button type="button" class="btn btn-light">
            Submitted <span class="badge badge-primary">{{data.total}}</span>
            <span class="sr-only">unread messages</span>
        </button>
    </div>

    <div class="col">
        <button type="button" class="btn btn-light">
            Passed <span class="badge badge-success">{{data.pass}}</span>
            <span class="sr-only">unread messages</span>
        </button>
    </div>

    <div class="col">
        <button type="button" class="btn btn-light">
            Failed <span class="badge badge-danger">{{data.fail}}</span>
            <span class="sr-only">unread messages</span>
        </button>
    </div>
</div>

{{#if data.members.length}}
<table class="table table-bordered mt-4">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">HNGi7 ID</th>
            <th scope="col">Name</th>
            <th scope="col">Message</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        {{#each data.members as |member i|}}
        {{#if_eq member.status "Passed"}}
        <tr class="table-success">
            <th scope="row">{{i}}</th>
            <td>{{member.id}}</td>
            <td>{{member.name}}</td>
            <td>{{member.message}}</td>
            <td>{{member.status}}</td>
        </tr>
        {{else}}
        <tr class="table-danger">
            <th scope="row">{{i}}</th>
            <td>{{member.id}}</td>
            <td>{{member.name}}</td>
            <td>{{member.message}}</td>
            <td>{{member.status}}</td>
        </tr>
        {{/if_eq}}
        {{/each}}
    </tbody>
</table>
{{else}}
<h1>No submissions</h1>
{{/if}}